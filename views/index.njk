{% extends "layout.njk" %}

{% block content %}

    <section class="cards">

        {% for item in items %}
        <div class="card" id="{{item.id}}">
            <div class="card-img">
                <img src="{{item.img_url}}" alt="{{item.id}}">
            </div>
            <div class="card-info">
                <h1>{{item.title}}</h1>
            </div>
            <div class="card-text">
                <p>{{item.discription}}</p>
            </div>
        </div>
        {% endfor %}

    
    </section> 
    
    <script src="script.js"></script>

{% endblock %}
